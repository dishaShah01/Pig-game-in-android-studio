<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.thepiggame.Main2Activity"
    android:background="@drawable/back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/p1total"
        android:id="@+id/textView4"
        android:layout_alignLeft="@+id/p2"
        android:layout_alignStart="@+id/p2" />

    <Button
        android:text="NEW GAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="65dp"
        android:id="@+id/newgame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        android:background="@color/colorPrimary"
        android:onClick="newgame" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice1"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="52dp"
        android:id="@+id/dice1"
        android:layout_toRightOf="@+id/p1total"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_above="@+id/p2score"
        android:onClick="roll"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice2"
        android:id="@+id/dice2"
        android:layout_alignTop="@+id/dice1"
        android:layout_alignBottom="@+id/dice1"
        android:layout_alignLeft="@+id/dice1"
        android:layout_alignStart="@+id/dice1"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:onClick="roll"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice3"
        android:id="@+id/dice3"
        android:layout_alignTop="@+id/dice1"
        android:layout_alignLeft="@+id/dice1"
        android:layout_alignStart="@+id/dice1"
        android:layout_alignBottom="@+id/dice1"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:onClick="roll"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice4"
        android:id="@+id/dice4"
        android:layout_alignBottom="@+id/dice1"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/dice1"
        android:layout_alignLeft="@+id/dice1"
        android:layout_alignStart="@+id/dice1"
        android:onClick="roll"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice5"
        android:id="@+id/dice5"
        android:layout_alignBottom="@+id/dice1"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/dice1"
        android:layout_alignLeft="@+id/dice1"
        android:layout_alignStart="@+id/dice1"
        android:onClick="roll"
        />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2total"
        android:background="?android:attr/colorControlHighlight"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/p2"
        android:layout_alignEnd="@+id/p2" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1total"
        android:background="?android:attr/colorControlHighlight"
        android:textColor="@android:color/holo_red_light"
        android:textAlignment="center"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/p1"
        android:layout_alignLeft="@+id/p1"
        android:layout_alignStart="@+id/p1"
        android:layout_toLeftOf="@+id/holdbutton"
        android:layout_toStartOf="@+id/holdbutton" />

    <TextView
        android:text=" CURRENT 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2score"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_dark"
        android:layout_alignBaseline="@+id/p1score"
        android:layout_alignBottom="@+id/p1score"
        android:layout_alignRight="@+id/p2"
        android:layout_alignEnd="@+id/p2" />

    <TextView
        android:text="CURRENT 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1score"
        android:textAlignment="center"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_dark"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/p1total"
        android:layout_alignStart="@+id/p1total" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dice6"
        android:id="@+id/dice6"
        android:onClick="roll"
        android:layout_alignTop="@+id/dice1"
        android:layout_alignBottom="@+id/dice1"
        android:layout_toRightOf="@+id/p1"
        android:layout_alignRight="@+id/dice1"
        android:layout_alignEnd="@+id/dice1" />

    <TextView
        android:text="Player 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_light"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/holdbutton"
        android:layout_toEndOf="@+id/holdbutton" />

    <TextView
        android:text="Player 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/holdbutton"
        android:layout_toStartOf="@+id/holdbutton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_dialog_info"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/p1score"
        android:layout_alignStart="@+id/p1score" />

    <TextView
        android:text="PRESS THE DICE TO ROLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <Button
        android:text="HOLD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/holdbutton"
        android:onClick="hold"
        android:background="@android:color/holo_red_light"
        android:textSize="22sp"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/newgame"
        android:layout_alignLeft="@+id/newgame"
        android:layout_alignStart="@+id/newgame" />

</RelativeLayout>

